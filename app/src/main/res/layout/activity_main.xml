<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    tools:context=".MainActivity">



        <TextView
            android:id="@+id/TV_Charge"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Carga de energÃ­a"
            android:padding="10dp" />

        <TextView
            android:id="@+id/TV_Internet"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Internet" />

        <TextView
            android:id="@+id/TV_Bluetooth"
            android:layout_width="match_parent"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Bluetooth" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Servicio musica"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/CHK_Music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Finalizar con activity"/>

                <Button
                    android:id="@+id/BTN_Music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comenzar"
                    android:background="@color/colorWhite"
                    android:textAllCaps="false"
                    />


            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/colorWhite"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Servicio prolongado"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ET_Long_Task"
                android:layout_width="80dp"
                android:inputType="number"
                android:textAlignment="center"
                android:layout_height="match_parent"/>

            <Button
                android:id="@+id/BTN_Long_Task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comenzar"
                android:background="@color/colorWhite"
                android:textAllCaps="false"/>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>